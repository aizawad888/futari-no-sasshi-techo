<% content_for(:page_title, "今日できる簡単なこと") %>
<% content_for(:show_back_button, true) %>
<% content_for(:back_path, useful_path) %>

<div class="relative z-10 max-w-md mx-auto px-4 py-2 space-y-6 min-h-screen mb-15">

  <!-- ページ説明 -->
    <p class="text-description">
      ※ランダムに3個ずつ生成されます。<br>
      リアルコミュニケーションの参考にしてみてください。
    </p>  

  <% @daily_tasks.each do |category, tasks| %>
    <div class="mb-6 p-6 bg-gray-100 rounded-xl shadow">
      <h2 class="text-base font-semibold mb-2"><%= category %></h2>
      <ul class="text-sm list-disc list-inside space-y-1 text-gray-700">
        <% tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>
