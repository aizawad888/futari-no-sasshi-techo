<% content_for(:page_title, t('users.edit')) %>
<% content_for(:show_back_button, true) %>

<div class="max-w-md mx-auto px-4 py-6">
  <div class="card-notebook bg-white p-6 space-y-5">

    <!-- ページ説明 -->
    <p class="text-xs text-wood-light">
      プロフィールを編集できます。更新するまで変更は反映されません。
    </p>

    <%= form_with model: @user, local: true do |f| %>

      <!-- 名前 -->
      <div>
        <%= f.label :name, "名前",
              class: "block text-sm font-heading font-medium mb-1 text-forest-green" %>
        <%= f.text_field :name,
              required: true,
              class: "w-full rounded-lg border border-gray-400 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sage" %>
      </div>

      <!-- 性別 -->
      <div>
        <%= f.label :sex, "性別",
              class: "block text-sm font-heading font-medium mb-1 text-forest-green" %>
        <%= f.select :sex,
              [["男性", "man"], ["女性", "woman"], ["その他", "other"]],
              { include_blank: "選択してください" },
              { required: true, class: "w-full rounded-lg border border-gray-400 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sage bg-white" } %>
      </div>

      <!-- アイコン -->
      <div>
        <%= render "shared/icon_select", f: f %>
      </div>

      <!-- 送信 -->
      <div class="pt-4 flex justify-end">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
