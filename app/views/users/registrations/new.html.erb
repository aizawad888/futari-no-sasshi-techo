<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('devise.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.password') %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <!-- 追加カラム -->
  <div class="field">
    <%= f.label :name, t('devise.name') %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :sex, t('devise.sex') %><br>
    <%= f.select :sex, [["男性", "male"], ["女性", "female"], ["その他", "other"]], include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :icon, t('devise.icon') %><br>
    <%= f.text_field :icon %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.sign_up') %>
  </div>
<% end %>

<%= render "users/shared/links" %>
