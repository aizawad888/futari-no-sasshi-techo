<% content_for(:page_title, @post.title_for_view(current_user)) %>
<% content_for(:show_back_button, true) %>

<div class="max-w-md mx-auto px-4 py-6 space-y-6 mb-24">

  <!-- 上半分カード（タイトル・投稿情報） -->
  <div class="card-notebook bg-white p-4 space-y-2">

    <!-- タイトル -->
    <div class="flex items-start gap-2">
      <h2 class="text-xl font-semibold text-forest-green font-heading break-words flex-1 min-w-0">
        <%= @post.title_for_view(current_user) %>
      </h2>

    </div>



    <!-- 投稿情報 -->
    <p class="text-sm text-wood-dark">カテゴリ：<%= @post.category.name %></p>
    <p class="text-sm text-wood-dark">優先度：<%= @post.sense_level_jp %></p>

    <div class="flex items-center gap-2 text-sm text-wood-dark">
      <span>投稿者：</span>
      <% if @post.user.icon.present? %>
        <%= image_tag "user_icons/#{@post.user.icon}",
              alt: @post.user.name,
              class: "w-6 h-6 rounded-full" %>
      <% end %>
      <span><%= @post.user.name %></span>
    </div>

    <p class="text-sm text-wood-dark">作成日：<%= l @post.created_at, format: :short %></p>
    <p class="text-sm text-wood-dark">答え合わせ：<%= l @post.reveal_at, format: :short %></p>
  </div>

  <!-- 下半分（ヒント・編集・メモ）はカードなしで今のまま） -->

  <!-- 相手にどう見えているか（投稿者のみ） -->
  <% if @post.user == current_user %>
    <div class="rounded-xl border border-cream bg-light-cream p-4 text-sm space-y-2">
      <% if @post.reveal_at.present? && Time.current < @post.reveal_at %>
        <p class="text-accent-orange">
          👀 相手にはまだ <strong>ヒント</strong> が表示されています
        </p>
        <p class="text-wood-light italic">
          ヒント文：<%= @post.category.hint_text %>
        </p>
      <% else %>
        <p class="text-forest-green">
          🌱 相手には <strong>答え</strong> が表示されています
        </p>
      <% end %>
    </div>
  <% end %>

  <!-- 編集・削除（投稿者のみ） -->
  <% if @post.user == current_user %>
    <div class="flex gap-3">
      <%= link_to edit_post_path(@post),
            class: "btn btn-secondary flex items-center gap-1 justify-center" do %>
        ✏️ 編集
      <% end %>

      <%= button_to post_path(@post),
            method: :delete,
            data: { turbo_confirm: "本当に削除しますか？" },
            class: "btn btn-danger flex items-center gap-1 justify-center" do %>
        🗑️ 削除
      <% end %>
    </div>
  <% end %>

  <!-- 自分用メモ -->
  <div class="bg-wood-light/30 rounded-lg p-4 space-y-3">
    <h3 class="font-heading text-wood-dark text-sm">自分用メモ</h3>

    <%= form_with model: @post_memo, local: true do |f| %>
      <%= f.hidden_field :post_id, value: @post.id %>

      <%= f.text_area :memo,
            rows: 4,
            class: "w-full rounded border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sage" %>

      <div class="text-right">
        <%= f.submit "保存", class: "btn btn-primary text-sm" %>
      </div>
    <% end %>
  </div>

</div>
