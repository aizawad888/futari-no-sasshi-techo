<% content_for(:page_title, t('notifications.index')) %>
<% content_for(:show_back_button, false) %>
<% content_for(:back_path, main_path) %>


<div data-controller="notifications" class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-6">📬 通知一覧</h1>
  
  <% if @notifications.present? %>
    <div class="space-y-3">
      <% @notifications.each do |notification| %>
        <%= link_to mark_as_read_notification_path(notification), 
                    data: { turbo_method: :patch },
                    class: "notification-item block border rounded-lg p-4 hover:shadow-md transition-all cursor-pointer
                           #{notification.read? ? 'bg-white' : 'bg-blue-50 border-blue-200'}" do %>
          
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <!-- 未読マーク -->
              <% unless notification.read? %>
                <span class="inline-block w-2 h-2 bg-blue-500 rounded-full mr-2"></span>
              <% end %>
              
              <!-- 通知メッセージ -->
              <span class="<%= 'font-bold text-gray-900' unless notification.read? %>">
                <%= notification.message %>
              </span>

              <!-- 投稿タイトル or ヒント -->
              <div class="mt-1 text-sm text-gray-600">
                📝
                <% if notification.post.present? %>
                  <% if notification.post.reveal_at <= Time.current %>
                    <%= notification.post.title %>
                  <% else %>
                    <%= notification.post.category.hint_text %> <!-- カテゴリごとのヒントテキスト -->
                  <% end %>
                <% end %>
              </div>
            </div>
            
            
            <!-- 通知の作成時間 -->
            <span class="text-sm text-gray-500 ml-4 whitespace-nowrap">
              <%= time_ago_in_words(notification.created_at) %>前
            </span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-gray-500">
      <p class="text-lg">📭 通知はありません</p>
    </div>
  <% end %>
</div>